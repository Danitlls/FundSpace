@{
  Layout="Shared/_Layout.cshtml";
}
<header>
  <nav>
    <ul id="navLeft">
      <li><div class="search"><a href="#sub-nav">Search</a></div></li>
      <li><a href="/campaigns/all">Campaigns</a></li>
    </ul>
    <div>
      <a href="/"><img src="../Content/img/logo.png" class="logo" alt="logo"></a>
    </div>
    <ul id="navRight">
      @if (@Model["currentUser"] != null)
      {
        <li><a href="/profile/@Model["currentUser"].Id">My Profile</a></li>
      }
      <li><a href="/login">Log-In/Sign-Up</a></li>
      <li><a href="/login">Log-Out</a></li>
    </ul>
    <div class="menuToggle">
      <a href="#menu" id="toggle"><span></span></a>

      <div id="menu">
        <ul>
          <li><div class="search">
            <a href="#sub-nav">Search</a>
          </div></li>
          <li><a href="/campaigns/all">Campaigns</a></li>
          <li><a href="/login">Log-in/Sign-Up</a></li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="hamburger" id="hamburger">
    <span class="line"></span>
    <span class="line"></span>
    <span class="line"></span>
  </div>
</header>
<section>
  <div class="categories">
    <ul>
      <li>
        <div><a href="/campaigns"><img src="../Content/img/all.png" alt=""/></a></div>
        <h4>All</h4>
      </li>
      @foreach(var category in @Model["categories"])
      {
        <li>
          <div><a href="/categories/@category.Id/trending"><img src="../Content/img/@(category.Name).png" alt=""/></a></div>
          <h4>@category.Name</h4>
        </li>
      }
    </ul>
  </div>
  <div class="cards">

  @if(@Model["campaigns"] != null)
  {
    @foreach(var campaign in @Model["campaigns"])
    {
      <div class="card">
      <div class="cardImage">
      <img src="#" alt="" />
      </div>
      <div class="cardText">
      <h3>@campaign["name"]</h3>
      </div>
      <a href="/campaign/@campaign["id"]"><button type="button" name="button">Read More</button></a>
      </div>
    }
  }

  @if(@Model["search-results"] != null)
  {
    @foreach(var campaign in @Model["search-results"])
    {
      <div class="card">
      <div class="cardImage">
      <img src="#" alt="" />
      </div>
      <div class="cardText">
      <h3>@campaign.Name</h3>
      <h3>@campaign.Balance out of @campaign.Goal</h3>
      </div>
      <a href="/campaign/@campaign.Id"><button type="button" name="button">Read More</button></a>
      </div>
    }
  }

  @if(@Model.ContainsKey("allCampaigns"))
  {
    @foreach(var campaign in @Model["allCampaigns"])
    {
      <div class="card">
      <div class="cardImage">
      <img src="#" alt="" />
      </div>
      <div class="cardText">
      <h3>@campaign.Name</h3>
      <h3>@campaign.Balance out of @campaign.Goal</h3>
      </div>
      <a href="/campaign/@campaign.Id"><button type="button" name="button">Read More</button></a>
      </div>
    }
  }
  </div>
</section>
<footer>
  <div class="footerLogo">
    <a href="index.html"><img src="../Content/img/logo.png" class="logo" alt="logo"></a>
  </div>
  <ul id="navFooter">
    <li><a href="#"><img src="../Content/img/twitter.png" alt="" /></a></li>
    <li><a href="#"><img src="../Content/img/facebook.png" alt="" /></a></li>
    <li><a href="#"><img src="../Content/img/tumblr.png" alt="" /></a></li>
    <li><a href="#"><img src="../Content/img/instagram.png" alt="" /></a></li>
    <li><a href="#"><img src="../Content/img/pinterest.png" alt="" /></a></li>
    <li><a href="#"><img src="../Content/img/youtube.png" alt="" /></a></li>
    <li><a href="#"><img src="../Content/img/github.png" alt="" /></a></li>
  </ul>
</footer>
<div id="search-panel">
<h3>Enter your search</h3>
<form action="/campaigns/search" method="get">
<input type="text" name="name" placeholder="SEARCH CAMPAIGNS">
<button type="submit" name="button" class="go-button">GO !</button>
</form>
<button type="button" name="cancel" class="cancel">X</button>
</div>
